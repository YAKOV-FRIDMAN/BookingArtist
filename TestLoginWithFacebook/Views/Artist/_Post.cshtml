@model BookingArtistMvcCore.ViewModels.Post





<div class="card mb-3 mycenter"  >
    <div class="row">
        <div class="col-10">
            <div class="row">

                <div class="rudus col-2">

                    <img src="@String.Format("data:image/gif;base64,{0}", Model.ImageProfile)" class="rudus">
                </div>
                <div class="col-8">

                    <p style="margin: 0; margin-top: 5px;">@Model.NameProfile</p>
                    <p style="margin: 0; margin-top: 5px;">Yesterday in 14:56</p>
                </div>
            </div>
        </div>
        <div class="col-2 text-center">
            <button type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="buPost">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots" viewBox="0 0 16 16">
                    <path d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z" />
                </svg>
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="/Artist/MyPost/EditPost/@Model.Id">Edit</a>
                <a class="dropdown-item" href="/Artist/DeletePost/@Model.Id">Delete</a>
                <a class="dropdown-item" href="#">Something else here</a>
            </div>
            
        </div>
    </div>

    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Description</p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    </div>
    <img src="@String.Format("data:image/gif;base64,{0}", Model.Image)" class="card-img-top" alt="...">
    <div class="row text-center">
        <div class="col-6">
            <p style="text-align: left; margin-left: 10px;">4502 views</p>
        </div>
        <div class="col-6">
            <p style="text-align: right; margin-right: 10px;">454 like</p>
        </div>
    </div>
    <div class="row text-center">
        <div class="col-4" style="margin-bottom: 5px;">
            <button type="button" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cursor" viewBox="0 0 16 16">
                    <path d="M14.082 2.182a.5.5 0 0 1 .103.557L8.528 15.467a.5.5 0 0 1-.917-.007L5.57 10.694.803 8.652a.5.5 0 0 1-.006-.916l12.728-5.657a.5.5 0 0 1 .556.103zM2.25 8.184l3.897 1.67a.5.5 0 0 1 .262.263l1.67 3.897L12.743 3.52 2.25 8.184z"></path>
                </svg>
                Share
            </button>
 
        </div>

        <div class="col-4">
            <button type="button" class="btn btn-outline-success">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-right-text" viewBox="0 0 16 16">
                    <path d="M2 1a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h9.586a2 2 0 0 1 1.414.586l2 2V2a1 1 0 0 0-1-1H2zm12-1a2 2 0 0 1 2 2v12.793a.5.5 0 0 1-.854.353l-2.853-2.853a1 1 0 0 0-.707-.293H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12z"></path>
                    <path d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6zm0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z"></path>
                </svg>
                Comment
            </button>
  
        </div>
        <div class="col-4">
            <button type="button" class="btn btn-outline-danger ">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"></path>
                </svg>
                Like
            </button>
    
        </div>
    </div>
</div>

